<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">


  <TextView
    android:layout_marginTop="16dp"
    android:textSize="25dp"
    android:text="Your BMI is:"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/textview_result"
      android:textColor="@color/purple_700"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:textAlignment="center"
      android:padding="16dp"
      android:layout_height="wrap_content"
      android:textSize="40sp"
      android:maxLength= "4"
      tools:text="27.194"/>


  <TextView
      android:id="@+id/textview_classificacao"
      android:layout_margin="8dp"
      android:textStyle="bold"
      tools:text="Classification: Thinness"
      android:textSize="23sp"
      android:textAlignment="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView
      android:layout_width="match_parent"
      android:textSize="20sp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="15dp"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:text="BMI range:"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Less than 18.5 - Thinness"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Between 18.5 and 24.9 - Normal"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Between 25.0 and 29.9 - Overweight"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Between 30.0 and 34.9 - Obese Class I"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Between 35.0 and 39.9 - Obese Class II"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:text="Greater than 40 - Obese Class III "/>



  </LinearLayout>